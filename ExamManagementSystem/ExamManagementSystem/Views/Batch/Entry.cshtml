
@model Models.ViewModels.BatchEntryVm

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Batch Entry";
}


    <h1>Batch Entry Form</h1>
    <hr/>
    @Html.ValidationSummary(true, null, new {@class = "text-danger"})



    <form method="post">
        <div class="form-horizontal">
            <div class="form-group">
                <label for="Organization" class="col-md-2 control-label">Organization</label>
                <div class="col-md-10">
                    @Html.DropDownListFor(c => c.OrganizationId, Model.OrganizationList, "Select Organization", new {@class = "form-control"})
                </div>
            </div>

            <div class="form-group">
                <label for="Course" class="col-md-2 control-label">Course</label>
                <div class="col-md-10">
                    @Html.DropDownListFor(c => c.CourseId, new List<SelectListItem>(), new {@class = "form-control", id = "courseListDD"})
                </div>
            </div>

            <div class="form-group">
                <label for="BatchNo" class="col-md-2 control-label">Batch No</label>
                <div class="col-md-10">
                    @Html.TextBoxFor(c => c.Name, new {@class = "form-control BatchNo", placeholder = "Batch No", @readonly = "readonly"})
                </div>
            </div>

            <div class="form-group">
                <label for="Description" class="col-md-2 control-label">Description</label>
                <div class="col-md-10">
                    @Html.TextAreaFor(c => c.Description, new {@class = "form-control", placeholder = "Description"})
                </div>
            </div>

            <div class="form-group">
                <label for="StartDate" class="col-md-2 control-label">Start Date</label>
                <div class="col-md-10">
                    @Html.TextBoxFor(c => c.StartDate, new {type = "date", @class = "form-control"})
                </div>
            </div>

            <div class="form-group">
                <label for="EndDate" class="col-md-2 control-label">End Date</label>
                <div class="col-md-10">
                    @Html.TextBoxFor(c => c.EndDate, new {type = "date", @class = "form-control"})
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <button type="submit" class="btn btn-primary pull-right">Submit</button>
                </div>
            </div>

        </div>
    </form>
    
    @section Scripts
    {
        <script src="~/Scripts/AppScript/BatchEntry/BatchDetail.js"></script>
    }

